<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
    <div class = "alert">
      <ul>
        <%  @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model:@book, local: true do |f|%>
  <h1>Editing Book</h1>
  <%= f.label :Title %><br/>
  <%= f.text_field :title%><br/>
  <%= f.label :Body %><br/>
  <%= f.text_area :body%><br>
  <%= f.submit 'Update Book' %><br>
  <%= link_to "Show", book_path(@book.id), class: "nav-link" %> | <%= link_to "Back", books_path, class: "nav-link" %>
<% end %>